{
    "_comment": "Speech-To-Text App Configuration",
    "api": {
        "base_url": "http://127.0.0.1:52625/v1",
        "api_key": "flm",
        "model": "whisper-v3",
        "prompt": ""
    },
    "audio": {
        "device_index": 0,
        "rate": 16000,
        "chunk_size": 2048,
        "silence_threshold": 700,
        "silence_duration": 1.5,
        "max_buffer": 40.0
    },
    "output": {
        "typing_enabled": true,
        "typing_delay": 0.005,
        "log_dir": "transcription_logs",
        "save_transcription_logs": true,
        "save_app_logs": true,
        "save_wav_files": false,
        "wav_dir": "audio_recordings",
        "log_transcription_text": true,
        "log_processing_time": true,
        "log_translation_errors": true
    },
    "hotkeys": {
        "toggle": "ctrl+shift+f1",
        "stop": "ctrl+shift+f2",
        "submit": "ctrl+shift+f3"
    },
    "filters": {
        "hallucinations": [
            "thank you.",
            "thank you",
            "stop",
            "bye.",
            "thanks for watching."
        ]
    },
    "startup": {
        "start_recording": false,
        "minimize_to_tray": true
    },
    "notebook": {
        "enabled": false,
        "file_path": "notebook.txt",
        "view_on_startup": false
    },
    "visual": {
        "cursor_flash_enabled": true,
        "cursor_flash_count": 3,
        "cursor_flash_duration": 0.1,
        "recording_indicator_enabled": true,
        "recording_indicator_type": "overlay",
        "overlay_pulse_speed": 2.0,
        "overlay_size": 60,
        "overlay_color": [
            255,
            60,
            60
        ],
        "overlay_alpha": 200,
        "animation_enabled": true,
        "animation_speed": 0.5,
        "notebook_indicator_color": [
            60,
            60,
            255
        ],
        "notebook_indicator_shape": "square",
        "notebook_pulse_pattern": "double"
    }
}
